


<div class="container" style="width: 1000px">
  <div class="navbar bg-light">
    <div><h1>Wikinimous<h1></div>
    <div><%= link_to "create a new article", "articles/new", :class => 'btn btn-primary'%></div>
  </div>
  <div class="text-start border-bottom pt-3 pb-3">
    <ul>
      <% @articles.each do |article| %>
        <h3>
          <%= link_to article.title, article_path(article), :class => 'text-decoration-none ' %>
        </h3>
        <li>
          <%= article.content %>
        </li>
      <% end %>
    </ul>
  </div>


</div>
